<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">


            <ImageView
                android:id="@+id/recipeImage"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:src="@drawable/profile"
                android:layout_centerHorizontal="true"/>

<!--            Title-->
            <TextView
                android:id="@+id/recipeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="30dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_below="@id/recipeImage"/>

<!--            Category-->
            <TextView
                android:id="@+id/Category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@id/recipeTitle"/>

            <TextView
                android:id="@+id/recipeCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category Here"
                android:textSize="15dp"
                android:layout_below="@id/Category"/>

<!--            Ingredients-->
            <TextView
                android:id="@+id/Ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@id/recipeCategory"/>

            <TextView
                android:id="@+id/recipeIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingredients Here"
                android:textSize="15dp"
                android:layout_below="@id/Ingredients"/>


<!--            Procedure-->
            <TextView
                android:id="@+id/Procedure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Procedure"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@id/recipeIngredients"/>

            <TextView
                android:id="@+id/recipeProcedure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Procedure Here"
                android:textSize="15dp"
                android:layout_below="@id/Procedure"/>

        </RelativeLayout>




    </ScrollView>

</RelativeLayout>